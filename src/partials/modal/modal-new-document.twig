<div id="modal-new-document" class="modal modal--new-document">
    <div class="modal__content">
        <button class="modal__close" data-modal-close><span class="hide-vis">Close</span></button>

        <h1 class="modal__header">Upload Files</h1>

        <ul class="modal__files progress-list">
            <li class="progress-list__item progress-list__item--finished">
                <div class="progress-list__icon"></div>
                <div class="progress-list__name">Document-Name-0.pdf</div>
                <button class="progress-list__action progress-list__action--trash">
                    <span class="hide-vis">Delete</span>
                </button>
            </li>

            <li class="progress-list__item progress-list__item--error">
                <div class="progress-list__icon"></div>
                <div class="progress-list__name">Document-Name-1.pdf</div>
            </li>

            <li class="progress-list__item progress-list__item--loading">
                <div class="progress-list__icon"></div>
                <div class="progress-list__name">Document-Name-2.pdf</div>
                <button class="progress-list__action progress-list__action--cancel">
                    <span class="hide-vis">Cancel</span>
                </button>
            </li>

            <li class="progress-list__item">
                <div class="progress-list__icon"></div>
                <div class="progress-list__name">Document-Name-3.pdf</div>
                <button class="progress-list__action progress-list__action--cancel">
                    <span class="hide-vis">Cancel</span>
                </button>
            </li>

            <li class="progress-list__item">
                <div class="progress-list__icon"></div>
                <div class="progress-list__name">Document-Name-4.pdf</div>
                <button class="progress-list__action progress-list__action--cancel">
                    <span class="hide-vis">Cancel</span>
                </button>
            </li>
        </ul>

        <div class="modal__dropzone">
            <svg class="icon icon-upload" aria-hidden="true">
                <use xlink:href="#icon-upload"></use>
            </svg>

            <div class="modal__dropzone-text">Drag drop or <a href="#">browse</a>.</div>
        </div>

        <div class="modal__actions">
            <button class="btn btn--green" data-modal-close>Save</button>
        </div>
    </div>
</div>
