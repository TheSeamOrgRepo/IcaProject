<div class="dashboard__filters">
    <div class="dashboard__filter-group">
        <img src="/images/icon-filter-status.svg" class="dashboard__filter-group__icon" alt="" aria-hidden="true">
        <span class="dashboard__filter-group__label">Status:</span>
        <div class="dashboard__filter-group__input">
            <div class="form-field form-field--dashboard form-field--select">
                <div class="select">
                    <select id="contract-type" class="form-field__select">
                        <option value="option-1">All</option>
                        <option value="option-2">Active</option>
                        <option value="option-3">Pending</option>
                        <option value="option-4">Closed</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard__filter-group">
        <img src="/images/icon-filter-type.svg" class="dashboard__filter-group__icon" alt="" aria-hidden="true">
        <span class="dashboard__filter-group__label">Type:</span>
        <div class="dashboard__filter-group__input">
            <div class="form-field form-field--dashboard form-field--select">
                <div class="select">
                    <select id="contract-type" class="form-field__select">
                        <option value="option-1">All</option>
                        <option value="option-2">Sale</option>
                        <option value="option-3">Purchase</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard__filter-group">
        <img src="/images/icon-filter-calendar.svg" class="dashboard__filter-group__icon" alt="" aria-hidden="true">
        <span class="dashboard__filter-group__label">Date Range:</span>
        <div class="dashboard__filter-group__input">
            <div class="form-field form-field--dashboard form-field--select">
                <div class="select">
                    <select id="contract-type" class="form-field__select">
                        <option value="option-1">Last 7 days</option>
                        <option value="option-2">Last 30 days</option>
                        <option value="option-3">Last 3 months</option>
                        <option value="option-4">Last 6 months</option>
                        <option value="option-5">Last year</option>
                        <option value="custom">Custom</option>
                    </select>
                </div>
            </div>

            <div class="form-field form-field--dashboard form-field--date" hidden>
                <div class="date">
                    <input type="text" class="form-field__date form-field__date--range">
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard__filter-group">
        <img src="/images/icon-filter-filter.svg" class="dashboard__filter-group__icon" alt="" aria-hidden="true">
        <span class="dashboard__filter-group__label">Filter by:</span>
        <div class="dashboard__filter-group__input">
            <div class="form-field">
                <input type="text" placeholder="Reference #, Counterparty, etc." class="form-field__input">
            </div>
        </div>
    </div>
</div>
