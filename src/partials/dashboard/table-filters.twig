<div class="dashboard__filters">
    {% if 'status' in filters %}
        <div class="dashboard__filter-group">
            <svg class="icon icon-status dashboard__filter-group__icon" aria-hidden="true">
                <use xlink:href="#icon-status"></use>
            </svg>

            <label for="status" class="dashboard__filter-group__label">Status:</label>
            <div class="dashboard__filter-group__input">
                <div class="form-field form-field--dashboard form-field--select">
                    <div class="select">
                        <select id="status" class="form-field__select">
                            <option value="option-1">All</option>
                            <option value="option-2">Active</option>
                            <option value="option-3">Pending</option>
                            <option value="option-4">Closed</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if 'type' in filters %}
        <div class="dashboard__filter-group">
            {% set icon = 'type' %}

            {% if slug == 'companies' %}
                {% set icon = 'company-type' %}
            {% endif %}

            <svg class="icon icon-{{ icon }} dashboard__filter-group__icon" aria-hidden="true">
                <use xlink:href="#icon-{{ icon }}"></use>
            </svg>

            <label for="type" class="dashboard__filter-group__label">Type:</label>
            <div class="dashboard__filter-group__input">
                <div class="form-field form-field--dashboard form-field--select">
                    <div class="select">
                        <select id="type" class="form-field__select">
                            {% if slug == 'companies' %}
                                <option value="option-1">All</option>
                                <option value="option-2">Related</option>
                                <option value="option-3">Affiliate</option>
                            {% else %}
                                <option value="option-1">All</option>
                                <option value="option-2">Sale</option>
                                <option value="option-3">Purchase</option>
                            {% endif %}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if 'date-range' in filters %}
        <div class="dashboard__filter-group">
            <svg class="icon icon-date dashboard__filter-group__icon" aria-hidden="true">
                <use xlink:href="#icon-date"></use>
            </svg>

            <label for="date-range" class="dashboard__filter-group__label">Date Range:</label>
            <div class="dashboard__filter-group__input">
                <div class="form-field form-field--dashboard form-field--select">
                    <div class="select">
                        <select id="date-range" class="form-field__select">
                            <option value="option-1">Last 7 days</option>
                            <option value="option-2">Last 30 days</option>
                            <option value="option-3">Last 3 months</option>
                            <option value="option-4">Last 6 months</option>
                            <option value="option-5">Last year</option>
                            <option value="custom">Custom</option>
                        </select>
                    </div>
                </div>

                <div class="form-field form-field--dashboard form-field--date" hidden>
                    <div class="date">
                        <input type="text" class="form-field__date form-field__date--range">
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if 'filter' in filters %}
        <div class="dashboard__filter-group">
            <svg class="icon icon-filter dashboard__filter-group__icon" aria-hidden="true">
                <use xlink:href="#icon-filter"></use>
            </svg>

            <span class="dashboard__filter-group__label">Filter by:</span>
            <div class="dashboard__filter-group__input">
                <div class="form-field">
                    {% set placeholder = 'Reference #, Counterparty, etc.' %}

                    {% if slug == 'companies' %}
                        {% set placeholder = 'Name, Contracts, etc.' %}
                    {% elseif slug == 'shipments' %}
                        {% set placeholder = 'Carrier, Owner, etc.' %}
                    {% elseif slug == 'documents' %}
                        {% set placeholder = 'Author, Owner, etc.' %}
                    {% endif %}
                    <input type="text" placeholder="{{ placeholder }}" class="form-field__input">
                </div>
            </div>
        </div>
    {% endif %}
</div>
