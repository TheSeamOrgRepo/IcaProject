<div class="contract-new__header">
    <div class="contract-new__header-left">
        <h1 class="contract-new__header-heading">
            New Contract
            <button>
                <svg class="icon icon-edit" aria-hidden="true">
                    <use xlink:href="#icon-edit"></use>
                </svg>
                <span class="hide-vis">Edit</span>
                {# <img src="assets/images/icon-edit.svg" alt=""> #}
            </button>
        </h1>
    </div>

    <ul class="contract-new__header-right">
        <li>
            <div class="contract-new__header-steps">
                <div class="contract-new__header-steps-text">
                    <span class="count"><span class="current">0</span> of <span class="total">0</span></span> Fields Completed
                </div>

                <div class="contract-new__header-steps-progress">
                    <div class="bar" style="width: 0%;"></div>
                </div>
            </div>
        </li>

        <li>
            <a href="/contracts.html" class="contract-new__header-action contract-new__header-action--cancel">
                <svg class="icon icon-cancel" aria-hidden="true">
                    <use xlink:href="#icon-cancel"></use>
                </svg>
                {# <img src="assets/images/icon-cancel.svg" alt="" aria-hidden="true"> #}
                <div>Cancel</div>
            </a>
        </li>

        <li>
            <a href="/contracts.html" class="contract-new__header-action contract-new__header-action--save">
                <svg class="icon icon-save" aria-hidden="true">
                    <use xlink:href="#icon-save"></use>
                </svg>
                {# <img src="assets/images/icon-save.svg" alt="" aria-hidden="true"> #}
                <div>Save & Exit</div>
            </a>
        </li>

        <li>
            <button class="contract-new__header-action contract-new__header-action--templates">
                <svg class="icon icon-templates" aria-hidden="true">
                    <use xlink:href="#icon-templates"></use>
                </svg>
                {# <img src="assets/images/icon-templates.svg" alt="" aria-hidden="true"> #}
                <div>Templates</div>
            </button>
        </li>

        <li>
            <button class="contract-new__header-action contract-new__header-action--sign" disabled>
                <svg class="icon icon-draw" aria-hidden="true">
                    <use xlink:href="#icon-draw"></use>
                </svg>
                {# <img src="assets/images/icon-sign.svg" alt="" aria-hidden="true"> #}
                <div>Sign</div>
            </button>
        </li>
    </ul>
</div>
