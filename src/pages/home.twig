{% extends '../partials/base/_layout.twig' %}

{% block content %}

<section class="login__left">
    <a href="#" class="login__back" data-trigger="main">
        <svg class="icon icon-arrow-left" aria-hidden="true">
            <use xlink:href="#icon-arrow-left"></use>
        </svg>

        <span class="hide-vis">Back</span>
    </a>

    <div class="login__centerer">
        <div class="login__content">
            <div class="container">
                <div class="login__logo">
                    <a href="#" data-trigger="main">
                        <img src="assets/images/cotton-ledger-logo.svg">
                    </a>
                </div>

                <div class="login__actions-container">
                    <!-- Main actions -->
                    <div class="login__actions login__actions--main is-active">
                        <div class="action__column">
                            <div class="action__heading">Sign In with Email</div>

                            <div class="form-field form-field--login form-field--email form-field--button">
                                <input type="email" placeholder="email@example.com" class="form-field__input">

                                <button class="btn form-field__button" data-trigger="email">
                                    <svg class="icon icon-arrow-right" aria-hidden="true">
                                        <use xlink:href="#icon-arrow-right"></use>
                                    </svg>
                                    <span class="hide-vis">Submit</span>
                                </button>
                            </div>

                            <p class="action__helper left">
                                <a href="#">Forgot email?</a>
                            </p>
                        </div>

                        <div class="action__column">
                            <p class="divider">or</p>
                        </div>

                        <div class="action__column">
                            <div class="action__heading">Sign In with Sovereign Identity</div>

                            <button class="btn btn--full btn--white btn--icon uport" data-trigger="uport">
                                <span>
                                    <svg class="icon icon-uport" aria-hidden="true">
                                        <use xlink:href="#icon-uport"></use>
                                    </svg>

                                    Login with Uport
                                </span>
                            </button>

                            <p class="action__helper">
                                uPort allows users to register their own identity on Ethereum, send and request credentials, sign transactions, and securely manage keys & data.
                            </p>
                        </div>
                    </div>

                    <!-- Email actions -->
                    <div class="login__actions login__actions--email">
                        <div class="action__column">
                            <div class="action__email">
                                <div class="action__heading">
                                    <svg class="icon icon-profile" aria-hidden="true">
                                        <use xlink:href="#icon-profile"></use>
                                    </svg>

                                    <span class="email">email@example.com</span>
                                </div>

                                <div class="form-field form-field--login form-field--email">
                                    <input type="email" placeholder="email@example.com" class="form-field__input" value="email@example.com">
                                </div>
                            </div>

                            <div class="form-field form-field--login form-field--password form-field--error">
                                <input type="password" placeholder="password" class="form-field__input">

                                <button class="btn form-field__icon is-show" data-toggle-password>
                                    <svg class="icon icon-password-show" aria-hidden="true">
                                        <use xlink:href="#icon-password-show"></use>
                                    </svg>

                                    <svg class="icon icon-password-hide" aria-hidden="true">
                                        <use xlink:href="#icon-password-hide"></use>
                                    </svg>
                                </button>

                                <div class="form-field__message">
                                    The password you entered is incorrect. <a href="#">Forgot your password?</a>
                                </div>
                            </div>

                            <p class="action__helper">
                                <span class="forgot-password">
                                    <a href="#">Forgot password?</a>
                                </span>

                                <span class="need-help">
                                    <a href="#">Need help signing in?</a>
                                </span>
                            </p>

                            <button class="btn btn--green" data-trigger="login">Next</button>
                        </div>

                        <p class="action__other">
                            or <a href="#" data-trigger="uport">login with uPort</a>
                        </p>
                    </div>

                    <!-- uPort actions -->
                    <div class="login__actions login__actions--uport">
                        <div class="action__column">
                            <div class="action__heading">Scan QR code with uPort Mobile App</div>

                            <div class="qr-code">
                                <svg class="icon icon-uport" aria-hidden="true">
                                    <use xlink:href="#icon-uport"></use>
                                </svg>

                                <img src="assets/images/qr-code.svg" alt="uPort QR Code">
                            </div>
                        </div>

                        <p class="action__other">
                            or <a href="#" data-trigger="email">login with email</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="login__copyright">
        <p>&copy;2018 The Seam, LLC. All Rights Reserved.</p>
    </div>
</section>

