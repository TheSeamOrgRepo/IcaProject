{% extends '../partials/base/_layout.twig' %}

{% block content %}

{% include '../partials/dashboard/main-nav.twig' %}

<section class="dashboard__top-bar">
    {% include '../partials/dashboard/contract-top-bar.twig' %}
</section>

<section class="dashboard__content">
    <div class="contract-new__content">
        <div class="contract-new__sidebar">
            <div class="contract-new__sidebar-panel" data-sidebar-panel="1">
                <h2>1. Parties & Type</h2>
                <p class="small">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>

                <div class="form-field form-field--contract form-field--select">
                    <label for="counter-party" class="form-field__label">Counter Party</label>
                    <div class="select">
                        <select id="counter-party" class="form-field__select" data-start-empty="true">
                            <option value="option-1">Option One</option>
                            <option value="option-2">Option Two</option>
                            <option value="option-3">Option Three</option>
                        </select>
                    </div>
                </div>

                <div class="form-field form-field--contract form-field--select">
                    <label for="contract-type" class="form-field__label">Contract Type</label>
                    <div class="select">
                        <select id="contract-type" class="form-field__select" data-start-empty="true">
                            <option value="option-1">Option One</option>
                            <option value="option-2">Option Two</option>
                            <option value="option-3">Option Three</option>
                        </select>
                    </div>
                </div>

                <div class="form-field form-field--contract form-field--date">
                    <label for="date" class="form-field__label">Date</label>
                    <div class="date">
                        <input type="text" class="form-field__date form-field__date--single">
                    </div>
                </div>
            </div>

            <div class="contract-new__sidebar-panel" data-sidebar-panel="2">
                <h2>2. Specifications</h2>
                <p class="small">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>

                <div class="form-field form-field--contract">
                    <label for="crop-year" class="form-field__label">Crop Year</label>
                    <input type="number" id="crop-year" class="form-field__input">
                </div>

                <div class="form-field form-field--contract">
                    <label for="growth-origin" class="form-field__label">Growth Origin</label>
                    <input type="text" id="growth-origin" class="form-field__input">
                </div>

                <div class="form-field form-field--contract">
                    <label for="grade" class="form-field__label">Grade</label>
                    <input type="text" id="grade" class="form-field__input">
                </div>

                <div class="form-field form-field--contract">
                    <label for="staple" class="form-field__label">Staple</label>
                    <input type="text" id="staple" class="form-field__input">
                </div>

                <div class="form-field form-field--contract">
                    <label for="micronaire-min" class="form-field__label">Micronaire Min</label>
                    <input type="number" id="micronaire-min" class="form-field__input">
                </div>

                <div class="form-field form-field--contract">
                    <label for="micronaire-max" class="form-field__label">Micronaire Max</label>
                    <input type="number" id="micronaire-max" class="form-field__input">
                </div>

                <div class="form-field form-field--contract">
                    <label for="strength-min" class="form-field__label">Strength Min</label>
                    <input type="text" id="strength-min" class="form-field__input">
                </div>
            </div>

            <div class="contract-new__sidebar-panel" data-sidebar-panel="3">
                <h2>3. Terms</h2>
                <p class="small">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>

                <div class="form-field form-field--contract">
                    <label for="incoterms" class="form-field__label">Incoterms</label>
                    <input type="text" id="incoterms" class="form-field__input">
                </div>

                <div class="form-fieldset form-fieldset--contract">
                    <div class="form-fieldset__heading">Quantity</div>

                    <div class="form-fieldset__fields">
                        <div class="form-field form-field--contract">
                            <label for="contracted-units" class="form-field__label required">Contracted Units</label>
                            <input type="number" id="contracted-units" class="form-field__input">
                        </div>

                        <div class="form-field form-field--contract">
                            <label for="quantity-type" class="form-field__label required">Quantity Type</label>
                            <input type="text" id="quantity-type" class="form-field__input">
                        </div>

                        <div class="form-field form-field--contract">
                            <label for="variation-percent" class="form-field__label required">Variation Percent</label>
                            <input type="number" id="variation-percent" class="form-field__input">
                        </div>

                        <div class="form-field form-field--contract">
                            <label for="variation-option" class="form-field__label required">Variation Option</label>
                            <input type="text" id="variation-option" class="form-field__input">
                        </div>
                    </div>
                </div>

                <div class="form-field form-field--contract">
                    <label for="freight" class="form-field__label">Freight</label>
                    <input type="text" id="freight" class="form-field__input">
                </div>

                <div class="form-field form-field--contract">
                    <label for="shipment" class="form-field__label">Shipment</label>
                    <input type="text" id="shipment" class="form-field__input">
                </div>

                <div class="form-field form-field--contract">
                    <label for="payment-terms" class="form-field__label">Payment Terms</label>
                    <input type="text" id="payment-terms" class="form-field__input">
                </div>

                <div class="form-field form-field--contract form-field--select">
                    <button class="form-field__action">+ Add Clause Item</button>
                    <label for="general-clauses" class="form-field__label">General Clauses</label>
                    <div class="select">
                        <select id="general-clauses" class="form-field__select" data-start-empty="true">
                            <option value="option-1">Option One</option>
                            <option value="option-2">Option Two</option>
                            <option value="option-3">Option Three</option>
                        </select>
                    </div>
                </div>

                <div class="form-field form-field--contract form-field--select">
                    <button class="form-field__action">+ Add Clause Item</button>
                    <label for="arbitration-clauses" class="form-field__label">Arbitration Clauses</label>
                    <div class="select">
                        <select id="arbitration-clauses" class="form-field__select" data-start-empty="true">
                            <option value="option-1">Option One</option>
                            <option value="option-2">Option Two</option>
                            <option value="option-3">Option Three</option>
                            <option value="option-4">Option Four</option>
                            <option value="option-5">Option Five</option>
                            <option value="option-6">Option Six</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="contract-new__sidebar-nav">
                <button class="prev" data-prev-sidebar-panel>Previous</button>
                <button class="next" data-next-sidebar-panel>Next</button>
            </div>
        </div>

        <div class="contract-new__preview">
            <div class="contract-new__pre-fill">
                <div class="form-field form-field--contract form-field--select">
                    <div class="select">
                        <select id="placeholder-select" class="form-field__select" data-placeholder="Choose Pre-Fill Content" onchange="document.querySelector('.contract-new__pre-fill').remove()">
                            <option value="option-1">21st Century Textiles</option>
                            <option value="option-2">AXEM Fibers</option>
                            <option value="option-3">Cargill, Inc.</option>
                            <option value="option-4">Joeâ€™s Cotton Co.</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="contract-new__pdf">
                <img src="assets/images/placeholder-contract.svg" alt="" class="shadow">
                <br><br>
                <img src="assets/images/placeholder-contract.svg" alt="" class="shadow">
                <br><br>
                <img src="assets/images/placeholder-contract.svg" alt="" class="shadow">
            </div>
        </div>
    </div>
</section>

{% include '../partials/modal/modal-submit-contract.twig' %}

{% include '../partials/modal/modal-contract-complete.twig' %}

{% include '../partials/modal/modal-contract-sign.twig' %}

{% endblock %}
